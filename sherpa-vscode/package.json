{
  "name": "sherpa-tickets",
  "displayName": "Sherpa Tickets",
  "description": "View your assigned tickets from Sherpa tracker in the sidebar",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:sherpaTickets"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "sherpa-tickets",
          "title": "Sherpa Tickets",
          "icon": "$(checklist)"
        }
      ]
    },
    "views": {
      "sherpa-tickets": [
        {
          "id": "sherpaTickets",
          "name": "My Tickets"
        }
      ]
    },
    "commands": [
      {
        "command": "sherpa.refreshTickets",
        "title": "Refresh Tickets",
        "icon": "$(refresh)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "sherpa.refreshTickets",
          "when": "view == sherpaTickets",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "Sherpa Tickets",
      "properties": {
        "sherpa.apiUrl": {
          "type": "string",
          "default": "http://localhost:8000",
          "description": "Base URL of the Sherpa API server"
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^18.19.130",
    "@types/vscode": "^1.85.0",
    "@vscode/vsce": "^3.0.0",
    "typescript": "^5.3.0"
  }
}
